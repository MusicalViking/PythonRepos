# Default behavior: auto-detect text files and normalize to LF
* text=auto

# Force specific text files to use LF
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf
*.php text eol=lf
*.json text eol=lf
*.xml text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.txt text eol=lf
*.csv text eol=lf
*.scss text eol=lf
*.ts text eol=lf
*.vue text eol=lf

# Image and binary files - do not modify
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.svg binary
*.ico binary
*.pdf binary
*.eot binary
*.ttf binary
*.woff binary
*.woff2 binary

# Archives - binary
*.zip binary
*.gz binary
*.tar binary
*.rar binary

# Fonts - binary
*.otf binary

# Microsoft Office files - binary
*.doc binary
*.docx binary
*.xls binary
*.xlsx binary
*.ppt binary
*.pptx binary
